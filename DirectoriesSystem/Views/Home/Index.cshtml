@using DirectoriesSystem.Models

@model BrowseViewModel

@{
    ViewBag.Title = "Directories";
}

<div class="">
    <div id="content">

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Last Modified
                    </th>
                    <th>
                        Size
                    </th>
                </tr>
            </thead>
            <tr>
                <td>
                    <div class="col-lg-12">
                        @if (@Model.ParentDirectory == null)
                        {
                            <ul class="nav nav-pills">
                                <li role="presentation" class="disabled">
                                    @Ajax.ActionLink(" Parent Directory",
                                        "Index",
                                        null,
                                        new AjaxOptions
                                        {

                                        },
                                        htmlAttributes: new
                                        {
                                            @class = "glyphicon glyphicon-folder-open ",
                                            Title = "Parent Directory"
                                        })
                                </li>
                            </ul>
                        }
                        else
                        {
                            @Ajax.ActionLink(" Parent Directory",
                                "Index",
                                null,
                                new AjaxOptions
                                {

                                },
                                htmlAttributes: new
                                {
                                    @class = "glyphicon glyphicon-folder-open ",
                                    Title = "Parent Directory"
                                })
                        }
                    </div>
                </td>
                <td></td><td>-</td>
            </tr>

            @{
                foreach (var directory in @Model.Directories)
                {
                    <tr>
                        <td>
                            <span class="glyphicon glyphicon-folder-close" aria-hidden="true" title="Open Directory"></span> @Ajax.ActionLink(@directory.Name, "", null)
                            <span class="glyphicon glyphicon-trash" aria-hidden="true" title="Delete Directory">@Ajax.ActionLink("Delete", "", null)</span>
                            <span class="glyphicon glyphicon-edit" aria-hidden="true" title="Edit Directory Name">@Ajax.ActionLink("Edit", "", null)</span>
                        </td>
                        <td>@directory.ModifiedOn</td>
                        <td>-</td>
                    </tr>
                }

                foreach (var file in @Model.Files)
                {
                    <tr>
                        <td>
                            @file.Name

                            <button type="button" class="btn btn-default" aria-label="Left Align" title="Delete File">
                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                            </button>
                            <button type="button" class="btn btn-default" aria-label="Left Align" title="Edit File">
                                <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                            </button>
                            <button type="button" class="btn btn-default" aria-label="Left Align" title="Download File">
                                <span class="glyphicon glyphicon-download" aria-hidden="true"></span>
                            </button>
                        </td>
                        <td>@file.ModifiedOn</td>
                        <td>@file.Size</td>
                    </tr>
                }
            }
        </table>
    </div>
</div>

<button type="button" class="btn btn-default" title="Create Directory">
    <span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span>
</button>

<button type="button" class="btn btn-default" aria-label="Left Align" title="Upload File">
    <span class="glyphicon glyphicon-upload" aria-hidden="true"></span>
</button>